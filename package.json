{
  "name": "fern-monorepo",
  "scripts": {
    "ri": "if exist .\\packages\\icons\\tdist rmdir /S /Q .\\packages\\icons\\tdist",
    "rr": "if exist .\\packages\\react\\tdist rmdir /S /Q .\\packages\\react\\tdist",
    "ru": "if exist .\\packages\\util\\tdist rmdir /S /Q .\\packages\\util\\tdist",
    "rur": "if exist .\\packages\\util-react\\tdist rmdir /S /Q .\\packages\\util-react\\tdist",
    "ra": "concurrently \"pnpm ri\" \"pnpm rr\" \"pnpm ru\" \"pnpm rur\"",
    "bi": "cd ./packages/icons && tsc",
    "br": "cd ./packages/react && pnpm i && tsc",
    "bu": "cd ./packages/util && tsc",
    "bur": "cd ./packages/util-react && pnpm i && tsc",
    "btypes": "concurrently \"pnpm bi\" \"pnpm br\" \"pnpm bu\" \"pnpm bur\"",
    "build": "pnpm ra && pnpm btypes && rollup -c && pnpm ra"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-react": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/node": "18.11.18",
    "@types/react": "^18.0.27",
    "concurrently": "^7.6.0",
    "rollup": "^3.12.0",
    "rollup-plugin-dts": "^5.1.1",
    "typescript": "^4.9.4"
  }
}